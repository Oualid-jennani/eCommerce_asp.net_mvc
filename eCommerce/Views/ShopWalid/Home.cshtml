
@{
	ViewBag.Title = "Index";
}

@{
	Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Page Content -->
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<h1 class="my-4">Shop Name</h1>
			<div class="list-group">

				@{
					eComEntities E = new eComEntities();
					foreach (var ct in E.Category)
					{
						<a href="?category=@ct.name.ToString()" class="list-group-item">@ct.name</a>
					}
				}
			</div>
		</div>
		<!-- /.col-lg-3 -->
		<div class="col-lg-9">
			<div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
				<ol class="carousel-indicators">
					<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
				</ol>
				<div class="carousel-inner" role="listbox"style="background-color:gray">
					<div class="carousel-item active">
						<img class="d-block img-fluid" src="~/img/h4-slide.png" alt="First slide">
					</div>
					<div class="carousel-item">
						<img class="d-block img-fluid" src="~/img/h4-slide2.png" alt="Second slide">
					</div>
					<div class="carousel-item">
						<img class="d-block img-fluid" src="~/img/h4-slide3.png" alt="Third slide">
					</div>
					<div class="carousel-item">
						<img class="d-block img-fluid" src="~/img/h4-slide4.png" alt="fourth slide">
					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
	
			<div class="row"style="margin-top:100px">
				@foreach (Product p in ViewBag.Pruduit)
				{
					<div class="col-lg-4 col-md-6 mb-4">
						<div class="card h-100">
							<a href="/ShopWalid/details?IDproduit=@p.id"><img class="card-img-top" src="~/img/@p.image" alt=""></a>
							<div class="card-body">
								<h4 class="card-title">
									<a href="/ShopWalid/details?IDproduit=@p.id">@p.name</a>
								</h4>
								<h5>$@p.price</h5>
								<p class="card-text">@p.description</p>
							</div>
							<div class="card-footer">
								<small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
							</div>
						</div>
					</div>
				}
			</div>
			<!-- /.row -->
		</div>
		<!-- /.col-lg-9 -->
	</div>
	<!-- /.row -->
</div>
<!-- /.container -->